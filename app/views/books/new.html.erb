
<h1>New Book Creation</h1>

<% if @book.errors.any? %>
  <div id="error_explanation">
    <h2><%= @book.errors.count %> error(s) prohibited this book from being saved:</h2>
 
    <ul>
    <% @book.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<form method="post" action="/books">
  <p>
    <div><label for="title">Title</label></div>
    <input id="title" type="text" name="book[title]" />
  </p>
  <p>
    <div><label for="content">content</label></div>
    <textarea rows="8" cols="45" id="content" type="text" name="book[content]"></textarea>
  
  </p>
  <input type="submit" value="Create Book" />
</form>